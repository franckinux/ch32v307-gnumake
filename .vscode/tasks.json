{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "cmake --build . --target all",
            "dependsOn": [ "cmake configure" ]
        },
        {
            "label": "cmake remove build",
            "type": "shell",
            "command": "rm -fr ${workspaceFolder}/build"
        },
        {
            "label": "cmake configure",
            "type": "shell",
            "command": "cmake -B build -S ${workspaceFolder} -G Ninja"
        },
        {
            "label": "flash to device",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "cmake --build . --target flash"
        }
    ]
}